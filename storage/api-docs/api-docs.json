{
    "openapi": "3.0.0",
    "info": {
        "title": "SPMS API",
        "description": "subscription-platform-management-system API Documentation",
        "version": "API v1.0"
    },
    "paths": {
        "/api/v1/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "New user registration",
                "description": "New user registration",
                "operationId": "AuthRegister",
                "requestBody": {
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/RegisterRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "default": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "default": "User is created successfully."
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "token": {
                                                        "type": "string",
                                                        "example": "XXXXXXXXXXXXXXX"
                                                    },
                                                    "user": {
                                                        "type": "array",
                                                        "items": {
                                                            "$ref": "#/components/schemas/UserResource"
                                                        }
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "User login",
                "description": "User login",
                "operationId": "AuthLogin",
                "requestBody": {
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "default": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "default": "User is logged in successfully."
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "token": {
                                                        "type": "string",
                                                        "example": "XXXXXXXXXXXXXXX"
                                                    },
                                                    "user": {
                                                        "type": "array",
                                                        "items": {
                                                            "$ref": "#/components/schemas/UserResource"
                                                        }
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "User logout",
                "description": "User logout",
                "operationId": "AuthLogout",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Oauth2 token",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "Bearer 1|iQ04fCi7gNIVCWnhgxubNJrdrIINlgnUkixEPfaA"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "default": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "default": "User is logged out successfully."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearer_token": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "LoginRequest": {
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "description": "email",
                        "format": "string",
                        "example": "jon.snow@example.com",
                        "nullable": false
                    },
                    "password": {
                        "description": "user password",
                        "format": "string",
                        "example": "password1234",
                        "nullable": false
                    }
                },
                "type": "object"
            },
            "RegisterRequest": {
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "properties": {
                    "name": {
                        "description": "user fullname",
                        "format": "string",
                        "example": "Jon Snow",
                        "nullable": false
                    },
                    "email": {
                        "description": "email",
                        "format": "string",
                        "example": "jon.snow@example.com",
                        "nullable": false
                    },
                    "password": {
                        "description": "user password",
                        "format": "string",
                        "example": "password1234",
                        "nullable": false
                    }
                },
                "type": "object"
            },
            "UserResource": {
                "properties": {
                    "id": {
                        "title": "id",
                        "description": "id",
                        "format": "int64",
                        "default": 1
                    },
                    "name": {
                        "title": "name",
                        "description": "name",
                        "format": "string",
                        "default": "name"
                    },
                    "email": {
                        "title": "email",
                        "description": "email",
                        "format": "string",
                        "default": "name@domain.com"
                    },
                    "roles": {
                        "title": "role",
                        "description": "role",
                        "format": "array",
                        "default": "[]"
                    },
                    "permissions": {
                        "title": "permissions",
                        "description": "permissions",
                        "format": "array",
                        "default": "[]"
                    },
                    "created_at": {
                        "title": "created_at",
                        "description": "created_at",
                        "format": "date",
                        "default": "2022-09-29 15:21:29"
                    },
                    "updated_at": {
                        "title": "updated_at",
                        "description": "updated_at",
                        "format": "date",
                        "default": "2022-09-29 15:21:29"
                    },
                    "deleted_at": {
                        "title": "deleted_at",
                        "description": "deleted_at",
                        "format": "date",
                        "default": "2022-09-29 15:21:29"
                    }
                },
                "type": "object"
            }
        }
    }
}